<!DOCTYPE html>
<html>
  <head>
    <title>Log In</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
      }
      label {
        color: #ccc;
      }

      form {
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 400px;
        background-image: url("./login_page.jpg");
      }

      h1 {
        text-align: center;
        color: #ccc;
      }

      label {
        display: block;
        margin-bottom: 8px;
      }

      input[type="text"],
      input[type="password"] {
        width: 95%;
        display: block;
        padding: 10px;
        margin-bottom: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
      }

      button[type="submit"] {
        display: block;
        width: 100%;
        padding: 10px;
        background-color: #323131;
        color: #fff;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease-in-out;
      }

      button[type="submit"]:hover {
        background-color: #454444;
      }

      p {
        margin-top: 10px;
      }

      .signup-link,
      .reset-link {
        text-align: center;
        margin-top: 15px;
      }
      .signup-link label,
      .reset-link label {
        display: inline-block;
      }
      .signup-link a,
      .reset-link a {
        text-decoration: none;
        color: #d4dada;
        padding: 5px 10px;
        transition: background-color 0.3s ease-in-out, color 0.3s ease-in-out;
      }
      .signup-link a:hover,
      .reset-link a:hover {
        background-color: #524f4f;
      }
    </style>
  </head>

  <body>
    <form action="/login" method="POST">
      <h1>Log In</h1>
      <label for="name">Username</label>
      <input
        required
        type="text"
        name="username"
        id="name"
        placeholder="Username"
      />
      <label for="password">Password</label>
      <input
        required
        type="password"
        name="password"
        id="password"
        placeholder="Password"
      />
      <button type="submit">Login</button>
      <% if(error){ %>
      <p style="color: red"><%= error %></p>
      <% } %>
      <div class="signup-link">
        <label>Didn't have account? </label><a href="/signup">Sign Up</a>
      </div>
      <div class="reset-link">
        <label>Forgot Password? </label><a href="/forgotPass">Reset Password</a>
      </div>
    </form>
  </body>
</html>
