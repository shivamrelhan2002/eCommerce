<!DOCTYPE html>
<html>
  <head>
    <title>Sign Up</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        background-color: #7c7777;
        background-image: url("./login_page.jpg");
      }

      form {
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 400px;
        border: 4px solid grey;
      }

      h1 {
        text-align: center;
        color: #1a1919;
      }

      label {
        display: block;
        margin-bottom: 8px;
      }

      input[type="text"],
      input[type="password"] {
        width: 95%;
        padding: 10px;
        margin-bottom: 20px;
        border: 1px solid #272525;
        border-radius: 5px;
      }

      input[type="submit"] {
        display: block;
        width: 100%;
        padding: 10px;
        background-color: #323131;
        color: #fff;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease-in-out;
      }

      p {
        margin-top: 10px;
        color: #201e1e;
      }

      #email {
        margin-bottom: 20px;
      }

      input[type="submit"]:hover {
        background-color: #454444;
      }

      .login-link {
        text-align: center;
        margin-top: 15px;
      }

      .login-link label {
        display: inline-block;
      }

      .login-link a {
        text-decoration: none;
        color: grey;
        padding: 5px 10px;
        transition: background-color 0.3s ease-in-out, color 0.3s ease-in-out;
      }

      .login-link a:hover {
        background-color: #fbf6f6;
        color: #2d2b2b;
      }

      #password-requirements ul {
        list-style-type: none;
        padding-left: 0;
        color: rgb(5, 5, 5);
      }

      .fulfilled {
        color: #007bff;
      }
      label {
        color: #1a1616;
        font-size: larger;
        font-family: Verdana, Geneva, Tahoma, sans-serif;
        font-weight: 600;
      }
    </style>
  </head>

  <body>
    <form action="/signup" method="post">
      <h1>Sign Up</h1>
      <label for="name">Username</label>
      <input
        type="text"
        id="name"
        name="username"
        placeholder="username"
        required
      />
      <label for="email">eMail</label>
      <input
        type="text"
        id="email"
        name="email"
        placeholder="abc@gmail.com"
        required
      />
      <label for="password">Password</label>
      <input type="password" id="password" name="password" required />
      <div id="password-requirements">
        <p>Password must have:</p>
        <ul>
          <li id="length">at least 8 characters</li>
          <li id="uppercase">Contain at least 1 uppercase letter</li>
          <li id="lowercase">Contain at least 1 lowercase letter</li>
          <li id="number">Contain at least 1 number</li>
        </ul>
      </div>
      <input type="submit" value="Sign Up" />
      <% if(error){ %>
      <p style="color: red"><%= error %></p>
      <% } %>
      <div class="login-link">
        <label>Already have an account? </label><a href="/login">Log In</a>
      </div>
    </form>

    <script>
      const passwordInput = document.getElementById("password");
      const passwordRequirements = document.getElementById(
        "password-requirements"
      );
      const requirementLabels = {
        length: document.getElementById("length"),
        uppercase: document.getElementById("uppercase"),
        lowercase: document.getElementById("lowercase"),
        number: document.getElementById("number"),
      };

      passwordInput.addEventListener("input", validatePassword);

      function validatePassword() {
        const password = passwordInput.value;
        const requirementsMet = {
          length: password.length >= 8,
          uppercase: /[A-Z]/.test(password),
          lowercase: /[a-z]/.test(password),
          number: /\d/.test(password),
        };

        for (const requirement in requirementLabels) {
          if (requirementsMet[requirement]) {
            requirementLabels[requirement].classList.add("fulfilled");
          } else {
            requirementLabels[requirement].classList.remove("fulfilled");
          }
        }
      }
    </script>
  </body>
</html>
